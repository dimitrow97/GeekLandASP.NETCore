@model PCStore.Web.Models.Store.ProductDetailsViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content">
                        <div class="tab-pane center-block active" id="pic-1"><img class="center-block" src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" width="300" /></div>
                    </div>

                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.Make @Model.Model</h3>
                    <p class="product-description">@Model.Specs</p>
                    <h4 class="price">current price: <span>$@Model.Price</span></h4>
                    <div class="section" style="padding-bottom:20px;">
                    </div>
                    <form method="post">
                        <div class="action">
                            <input class="add-to-cart btn btn-default" type="submit" asp-controller="ShoppingCart" asp-route-id="@Model.Id" asp-action="AddToCart" id="btn" style="padding-bottom:20px" value="Add to Cart" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
<link href="~/css/details.css" rel="stylesheet">
